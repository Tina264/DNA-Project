    "GAG" : "Asp",
    "GGU" : "Gly",
    "GGC" : "Gly",
    "GGA" : "Gly",
    "GGG" : "Gly"
}

count = 0
string = ""
list4 = []

for i in list3:
    if count != 3:
        string += i
        count += 1
    if count == 3:
        list4.append(string)
        count = 0
        string = ""

polypeptide_chain = ""

for i in list4:
    polypeptide_chain += amino_acid[i]
    polypeptide_chain += " "

print("[Polypeptide Chain]")
print()
print(polypeptide_chain)
