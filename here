"""
Tina
"""

import random

list = []

dict = {
    0 : "A",
    1 : "T",
    2 : "C",
    3 : "G"
}

for i in range(0, 12):
    list.append(dict[random.randint(0, 3)])

strand = ""

count = 0

for i in list:
    strand += i
    count += 1
    if count == 3:
        count = 0
        strand += " "

comp = {
    "A" : "T",
    "T" : "A",
    "C" : "G",
    "G" : "C"
}

list2 = []

for i in list:
    list2.append(comp[i])

strand2 = ""

count = 0

for i in list2:
    strand2 += i
    count += 1
    if count == 3:
        count = 0
        strand2 += " "

print("[DNA Molecule]")
print()
print("Strand:", strand)
print("Complementary Strand:", strand2)
print()

rnacomp = {
    "A" : "U",
    "T" : "A",
    "C" : "G",
    "G" : "C"
}

list3 = []
rnastrand = ""

for i in list2:
    list3.append(rnacomp[i])

count = 0

for i in list3:
    rnastrand += i
    count += 1
    if count == 3:
        count = 0
        rnastrand += " "

print("[RNA strand of the Complementary]")
print()
print("Strand:", rnastrand)
print()

amino_acid = {
