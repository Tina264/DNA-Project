    "UCG" : "Ser",
    "UAU" : "Tyr",
    "UAC" : "Tyr",
    "UAA" : "Stop",
    "UAG" : "Stop",
    "UUU" : "Stop",
    "UGU" : "Cys",
    "UGC" : "Cys",
    "UGA" : "Stop",
    "UGG" : "Trp",
    "CUU" : "Leu",
    "CUC" : "Leu",
    "CUA" : "Leu",
    "CUG" : "Leu",
    "CCU" : "Pro",
    "CCC" : "Pro",
    "CCA" : "Pro",
    "CCG" : "Pro",
    "CAU" : "His",
    "CAC" : "His",
    "CAA" : "Gln",
    "CAG" : "Gln",
    "CGU" : "Arg",
    "CGC" : "Arg",
    "CGA" : "Arg",
    "CGG" : "Arg",
    "AUU" : "Ile",
    "AUC" : "Ile",
    "AUA" : "Ile",
    "AUG" : "Met/Start",
    "ACU" : "Thr",
    "ACC" : "Thr",
    "ACA" : "Thr",
    "ACG" : "Thr",
    "AAU" : "Asn",
    "AAC" : "Asn",
    "AAA" : "Lys",
    "AAG" : "Lys",
    "AGU" : "Ser",
    "AGC" : "Ser",
    "AGA" : "Arg",
    "AGG" : "Arg",
    "GUU" : "Val",
    "GUC" : "Val",
    "GUA" : "Val",
    "GUG" : "Val",
    "GCU" : "Ala",
    "GCC" : "Ala",
    "GCA" : "Ala",
    "GCG" : "Ala",
    "GAU" : "Asp",
